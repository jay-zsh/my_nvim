{
  "Markdown Heading 1": {
    "prefix": "h1",
    "body": ["# ${1:Title}"],
    "description": "Insert H1 heading"
  },
  "Markdown Heading 2": {
    "prefix": "h2",
    "body": ["## ${1:Subtitle}"],
    "description": "Insert H2 heading"
  },
  "Markdown Link": {
    "prefix": "link",
    "body": ["[${1:link text}](${2:url})"],
    "description": "Insert a Markdown link"
  },
  "Markdown Image": {
    "prefix": "img",
    "body": ["![${1:alt text}](${2:image_url})"],
    "description": "Insert a Markdown image"
  },
  "Markdown Code Block": {
    "prefix": "code",
    "body": [
      "```${1:language}",
      "${2:code}",
      "```"
    ],
    "description": "Insert a fenced code block"
  },
  "Markdown Table": {
    "prefix": "table",
    "body": [
      "| ${1:Header 1} | ${2:Header 2} |",
      "|-------------|-------------|",
      "| ${3:Row 1 Col 1} | ${4:Row 1 Col 2} |",
      "| ${5:Row 2 Col 1} | ${6:Row 2 Col 2} |"
    ],
    "description": "Insert a simple Markdown table"
  },
  "Markdown Task List": {
    "prefix": "tasklist",
    "body": [
      "- [ ] ${1:Task 1}",
      "- [ ] ${2:Task 2}",
      "- [x] ${3:Completed Task}"
    ],
    "description": "Insert a task list"
  },
  "Markdown Blockquote": {
    "prefix": "quote",
    "body": ["> ${1:quoted text}"],
    "description": "Insert a blockquote"
  },
  "Markdown Horizontal Rule": {
    "prefix": "hr",
    "body": ["---"],
    "description": "Insert a horizontal rule"
  }
}

